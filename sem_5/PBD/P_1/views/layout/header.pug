block header
    header(class="container")
        div(class="py-4 d-flex align-items-center")
            a(href="/" class="font-weight-bold") E-com

            nav(class="nav ml-5")
                a(href="/" class="nav-link") Home
                a(class="nav-link") Categories

            if user
                div(class="dropdown ml-auto")
                    a(href="#" class="btn dropdown-toggle" data-toggle="dropdown")= user.username
                    div(class="dropdown-menu dropdown-menu-right")
                        a(class="dropdown-item" href="#") Profile
                        a(class="dropdown-item" href="#") Settings
                        if user.role = 2
                            a(class="dropdown-item text-danger" href="/adm") Admin panel
                        div(class="dropdown-divider")
                        a(class="dropdown-item" href="/logout") Log out
            else
                nav(class="nav ml-auto")
                    a(href="/login" class="nav-link") Log in
                    a(href="/register" class="btn nav-link btn-primary") Sign up
